# ============================================================================
# LLM Provider Configuration
# ============================================================================

# Default LLM provider (anthropic, openai, zhipu, ollama, deepseek, gemini, qwen, kimi, minimax)
DEFAULT_LLM_PROVIDER=anthropic

# Default model (optional, uses provider defaults)
# DEFAULT_LLM_MODEL=

# ============================================================================
# Provider API Keys (Secrets - must be in .env, NOT committed to git)
# ============================================================================

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Zhipu AI
ZHIPUAI_API_KEY=your_zhipu_api_key_here

# DeepSeek (official API or Ollama Cloud)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Ollama
OLLAMA_API_KEY=your_ollama_api_key_here

# Gemini
GOOGLE_API_KEY=your_gemini_api_key_here

# Qwen (Alibaba)
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# Kimi (MiniMax)
MINIMAX_API_KEY=your_minimax_api_key_here

# ============================================================================
# Langfuse Configuration
# ============================================================================

LANGFUSE_SECRET_KEY=your_langfuse_secret_key_here
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key_here
LANGFUSE_BASE_URL=https://langfuse.gongchatea.com.au

# ============================================================================
# Ollama Configuration
# ============================================================================

# Ollama mode (cloud, local)
OLLAMA_MODE=cloud

# Ollama Cloud (optional, for DeepSeek compatibility)
OLLAMA_CLOUD_API_KEY=your_ollama_cloud_api_key_here
OLLAMA_CLOUD_URL=https://ollama.com

# Ollama Local
OLLAMA_LOCAL_URL=http://localhost:11434

# ============================================================================
# Google Workspace Integration (Optional)
# ============================================================================

# OAuth2 credentials (for Gmail, Calendar, Contacts)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# Token encryption (generate with: Fernet.generate_key())
EMAIL_ENCRYPTION_KEY=

# ============================================================================
# Telegram Bot Configuration
# ============================================================================

# Get from BotFather: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=
TELEGRAM_WEBHOOK_SECRET=

# ============================================================================
# Storage Configuration
# ============================================================================

# Checkpoint storage (postgres, memory)
CHECKPOINT_STORAGE=postgres

# Storage paths
SHARED_ROOT=./data/shared
USERS_ROOT=./data/users
ADMINS_ROOT=./data/admins

# Admin access (comma-separated thread IDs)
ADMIN_USER_IDS=

# ============================================================================
# Database Configuration
# ============================================================================

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=executive_assistant
POSTGRES_PASSWORD=executive_assistant_password
POSTGRES_DB=executive_assistant_db

# ============================================================================
# Security / File Sandbox
# ============================================================================

# Maximum file size in MB (for file operations)
STORAGE_MAX_FILE_SIZE_MB=10

# Allowed file extensions
STORAGE_ALLOWED_FILE_EXTENSIONS=.txt,.md,.py,.js,.ts,.json,.yaml,.yml,.csv,.xml,.html,.css,.sh,.bash,.log,.pdf,.png,.jpg,.jpeg,.webp,.tiff,.bmp,.gif
