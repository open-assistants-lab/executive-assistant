# ================================
# Application
# ================================
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your-secret-key-here

# ================================
# Agent Configuration
# ================================
# Name your Executive Assistant (appears in prompts, CLI, Telegram)
AGENT_NAME=Executive Assistant

# ================================
# LLM Provider API Keys
# ================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=2024-12-01-preview
GROQ_API_KEY=
XAI_API_KEY=
NVIDIA_API_KEY=
COHERE_API_KEY=
MISTRAL_API_KEY=
TOGETHER_API_KEY=
FIREWORKS_API_KEY=
DEEPSEEK_API_KEY=
HUGGINGFACE_API_KEY=
OPENROUTER_API_KEY=

# Ollama (local or cloud endpoint)
# For cloud: use https://ollama.com and set OLLAMA_API_KEY
# For local: use http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_API_KEY=

# AWS (for Bedrock/Nova)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Databricks
DATABRICKS_HOST=
DATABRICKS_TOKEN=

# IBM Watsonx
WATSONX_URL=
WATSONX_APIKEY=

# Llama.cpp (local model path)
LLAMACPP_MODEL_PATH=

# Minimax (Chinese LLM)
MINIMAX_API_KEY=
MINIMAX_GROUP_ID=

# Qwen (Alibaba Cloud / Dashscope)
DASHSCOPE_API_KEY=

# Zhipu AI (GLM models)
ZHIPUAI_API_KEY=

# ================================
# Default Model Configuration
# ================================
# Main chat model (format: provider/model-name)
# Examples: openai/gpt-4o, anthropic/claude-3-5-sonnet-20241022, google/gemini-2.0-flash
# For Ollama Cloud: ollama/qwen3-coder-next
DEFAULT_MODEL=ollama/qwen3-coder-next

# Summarization model (for conversation summaries, document summarization)
# Can use a different/cheaper provider than the main model
SUMMARIZATION_MODEL=openai/gpt-4o-mini

# ================================
# Langfuse (optional - observability)
# ================================
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# ================================
# Database & Storage
# ================================
# PostgreSQL for agent checkpoints (thread state persistence)
DATABASE_URL=postgresql://agent:password@postgres:5432/agent

# Base path for all persistent data
# Structure:
#   /data/users/{user_id}/memories/  - User memories
#   /data/users/{user_id}/skills/    - User skills
#   /data/shared/skills/             - Team skills
DATA_PATH=/data

# ================================
# OAuth (deployment-level)
# ================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=common

# ================================
# API Server
# ================================
API_HOST=0.0.0.0
API_PORT=8000

# ================================
# Telegram Bot (optional)
# ================================
TELEGRAM_BOT_TOKEN=

# ================================
# Web Search (Tavily)
# ================================
TAVILY_API_KEY=

# ================================
# Web Scraping (Firecrawl)
# ================================
FIRECRAWL_API_KEY=
FIRECRAWL_BASE_URL=https://api.firecrawl.dev
