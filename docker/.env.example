# ============================================================================
# Executive Assistant Environment Configuration
# ============================================================================
# This file contains ONLY secrets and environment-specific overrides.
# Application defaults are in config.yaml.
#
# Copy this file to .env and fill in your values.
# ============================================================================

# ============================================================================
# REQUIRED: LLM Provider
# ============================================================================
# Choose your LLM provider: anthropic, openai, zhipu, deepseek, ollama, gemini, qwen, kimi, minimax
# Default is set in config.yaml (llm.default_provider). Override here if needed.
# DEFAULT_LLM_PROVIDER=ollama

# ----------------------------------------------------------------------------
# Anthropic (Claude)
# ----------------------------------------------------------------------------
# Get API key: https://console.anthropic.com/settings/keys
# Pricing: https://www.anthropic.com/pricing
# Required only if DEFAULT_LLM_PROVIDER=anthropic
# ANTHROPIC_API_KEY=sk-ant-xxx

# ----------------------------------------------------------------------------
# OpenAI
# ----------------------------------------------------------------------------
# Get API key: https://platform.openai.com/api-keys
# Pricing: https://openai.com/pricing
# Required only if DEFAULT_LLM_PROVIDER=openai
# OPENAI_API_KEY=sk-your-openai-key-here

# ----------------------------------------------------------------------------
# Zhipu AI
# ----------------------------------------------------------------------------
# Get API key: https://open.bigmodel.cn/usercenter/apikeys
# Pricing: https://open.bigmodel.cn/pricing
# Required only if DEFAULT_LLM_PROVIDER=zhipu
# ZHIPUAI_API_KEY=your-zhipu-key

# ----------------------------------------------------------------------------
# DeepSeek (Official API)
# ----------------------------------------------------------------------------
# Get API key: https://platform.deepseek.com/api_keys
# Pricing: https://api.deepseek.com/pricing
# Features: Excellent tool calling, fast, cost-effective
# Models: deepseek-chat, deepseek-coder, deepseek-reasoner
# Required only if DEFAULT_LLM_PROVIDER=deepseek
# DEEPSEEK_API_KEY=sk-your-deepseek-key
# DEEPSEEK_API_BASE=https://api.deepseek.com

# ----------------------------------------------------------------------------
# Ollama (cloud or local)
# ----------------------------------------------------------------------------
# Get API key (cloud only): https://ollama.com/user/settings
# Local mode: No API key needed
# Required only if DEFAULT_LLM_PROVIDER=ollama
# Default mode is set in config.yaml (ollama.mode). Override here if needed.
# OLLAMA_MODE=cloud
OLLAMA_CLOUD_API_KEY=your-ollama-cloud-key

# ----------------------------------------------------------------------------
# Gemini (Google)
# ----------------------------------------------------------------------------
# Get API key: https://makersuite.google.com/app/apikey
# Pricing: https://ai.google.dev/pricing
# Features: 1M+ tokens context, thinking mode, multimodal
# Required only if DEFAULT_LLM_PROVIDER=gemini
# GOOGLE_API_KEY=AIza...your-google-api-key
# GEMINI_API_KEY=AIza...your-gemini-api-key (alternative to GOOGLE_API_KEY)
# Optional: Vertex AI backend (for enterprise/production)
# GOOGLE_GENAI_USE_VERTEXAI=false
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_CLOUD_LOCATION=us-central1

# ----------------------------------------------------------------------------
# Qwen (Alibaba / DashScope)
# ----------------------------------------------------------------------------
# Get API key: https://dashscope.console.aliyun.com/apiKey
# Pricing: https://dashscope.console.aliyun.com/price
# Features: Fast, cost-effective, local deployment available
# Required only if DEFAULT_LLM_PROVIDER=qwen
# DASHSCOPE_API_KEY=sk-...your-dashscope-api-key

# ----------------------------------------------------------------------------
# Kimi K2 (Moonshot AI)
# ----------------------------------------------------------------------------
# Get API key: https://platform.moonshot.cn/console/api-keys
# Pricing: https://platform.moonshot.cn/docs (76% lower cost than frontier)
# Features: 256K tokens, agent swarm capabilities, multimodal
# Required only if DEFAULT_LLM_PROVIDER=kimi
# MOONSHOT_API_KEY=your-moonshot-api-key
# MOONSHOT_API_BASE=https://api.moonshot.ai/v1

# ----------------------------------------------------------------------------
# MiniMax M2
# ----------------------------------------------------------------------------
# Get API key: https://www.minimaxi.com/user-center/basic-information/interface-key
# Pricing: https://www.minimaxi.com (ultra-low cost: ~$0.3/M input)
# Features: 204,800 tokens, speech/music generation, video understanding
# Required only if DEFAULT_LLM_PROVIDER=minimax
# MINIMAX_API_KEY=your-minimax-api-key
# MINIMAX_API_TYPE=openai  # Options: openai, anthropic
# MINIMAX_API_BASE=https://api.minimax.io/v1

# ============================================================================
# REQUIRED: Channels
# ============================================================================
# Active channels (comma-separated: telegram, http)
# Default is set in config.yaml (channels.active). Override here if needed.
# EXECUTIVE_ASSISTANT_CHANNELS=telegram,http

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-bot-token-here
# TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook
# TELEGRAM_WEBHOOK_SECRET=your-webhook-secret

# HTTP Channel (override config.yaml defaults)
# HTTP_HOST=0.0.0.0
# HTTP_PORT=8000

# ============================================================================
# REQUIRED: Database
# ============================================================================
POSTGRES_PASSWORD=your-secure-password-here

# Optional: Remote PostgreSQL (overrides config.yaml)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=ken
# POSTGRES_DB=ken_db

# ============================================================================
# REQUIRED: External Services
# ============================================================================
# Firecrawl (web scraping + search)
# Used for: search_web, firecrawl_scrape, firecrawl_crawl tools
FIRECRAWL_API_KEY=fc-your-firecrawl-key-here
# FIRECRAWL_API_URL=https://api.firecrawl.dev

# Google Workspace (Gmail, Calendar, Contacts) - Optional
# Get credentials: https://console.cloud.google.com/
# Guide: features/google-workspace-integration.md
# GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback/google
# EMAIL_ENCRYPTION_KEY=your-fernet-encryption-key-32-bytes-base64

# ============================================================================
# OPTIONAL: Observability
# ============================================================================
# Langfuse (LLM tracing and monitoring)
# Get keys: https://cloud.langfuse.com or your self-hosted instance
# Docs: https://langfuse.com/integrations/frameworks/langchain
# Used for: Tracing LLM calls, tool calls, agent execution, performance metrics
# LANGFUSE_SECRET_KEY=sk-lf-your-secret-key-here
# LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key-here
# LANGFUSE_BASE_URL=https://cloud.langfuse.com  # Or: https://langfuse.gongchatea.com.au
# LANGFUSE_TRACING_ENVIRONMENT=production  # Options: production, staging, development

# ============================================================================
# OPTIONAL: Overrides
# ============================================================================
# Override config.yaml values if needed for your environment

# Agent customization
# AGENT_NAME=Ken

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default is set in config.yaml (logging.level). Override here if needed.
# LOG_LEVEL=INFO

# Time zone
# Default is set in config.yaml (system.timezone). Override here if needed.
# TZ=UTC

# Storage paths (for custom deployments)
# USERS_ROOT=./data/users
# SHARED_ROOT=./data/shared
# ADMINS_ROOT=./data/admins

# ============================================================================
# OPTIONAL: Domain Routing (Caddy)
# ============================================================================
# Ken HTTP endpoint via Caddy
# KEN_DOMAIN=ken.example.com
#
# Langfuse web endpoint via Caddy
# LANGFUSE_DOMAIN=langfuse.example.com
#
# Optional: email for ACME certificate registration
# CADDY_ACME_EMAIL=admin@example.com
#
# Postgres is TCP (not HTTP) and is not reverse-proxied by Caddy in this setup.
# To use a domain name, point DNS A/AAAA for your DB host and connect with:
#   postgres.example.com:5432
# Optional helper var:
# POSTGRES_DOMAIN=postgres.example.com

# ============================================================================
# OPTIONAL: Langfuse (Self-hosted)
# ============================================================================
# Langfuse public URL (must match domain routed by Caddy)
# LANGFUSE_PUBLIC_URL=https://langfuse.example.com

# Langfuse DB credentials.
# For small deployments you can reuse existing Postgres DB/user.
# For production, prefer dedicated DB/user (or dedicated Postgres instance).
# LANGFUSE_POSTGRES_DB=ken_db
# LANGFUSE_POSTGRES_USER=ken
# LANGFUSE_POSTGRES_PASSWORD=your-secure-password-here

# Langfuse app secrets
# LANGFUSE_NEXTAUTH_SECRET=replace-with-long-random-secret
# LANGFUSE_SALT=replace-with-long-random-salt
# Must be 64 hex chars
# LANGFUSE_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
# LANGFUSE_TELEMETRY_ENABLED=true

# ClickHouse / Redis / MinIO service settings
# CLICKHOUSE_DB=default
# CLICKHOUSE_USER=clickhouse
# CLICKHOUSE_PASSWORD=replace-clickhouse-password
# REDIS_CONNECTION_STRING=redis://redis:6379/0
# MINIO_ROOT_USER=minio
# MINIO_ROOT_PASSWORD=replace-minio-password
# LANGFUSE_S3_EVENT_UPLOAD_BUCKET=langfuse
# LANGFUSE_S3_MEDIA_UPLOAD_BUCKET=langfuse-media
# LANGFUSE_S3_EVENT_UPLOAD_ACCESS_KEY_ID=minio
# LANGFUSE_S3_EVENT_UPLOAD_SECRET_ACCESS_KEY=replace-minio-password
# LANGFUSE_S3_MEDIA_UPLOAD_ACCESS_KEY_ID=minio
# LANGFUSE_S3_MEDIA_UPLOAD_SECRET_ACCESS_KEY=replace-minio-password
